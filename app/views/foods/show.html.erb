<section>
  <div class="d-flex justify-content-between align-items-center">
    <h1>Food Details</h1>
    <%= link_to "Back to Foods", foods_path, class: 'btn btn-secondary' %>
  </div>

  <table class="table table-striped" id="foods">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= @food.name %>
        </td>
        <td>
          <%= @food.measurement_unit %>
        </td>
        <td>
          <%= @food.price %>
        </td>
        <td>
          <%= button_to "Remove", @food, method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    </tbody>
  </table>
</section>
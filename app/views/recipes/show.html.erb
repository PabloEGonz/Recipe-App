<div>
  <h2><%= @recipe.name%></h2>
  <p><%= @recipe.preparation_time%>hours</p>
  <p><%= @recipe.cooking_time%> hours</p>
  <pre><%= @recipe.description%></pre>
  <div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked >
    <label class="form-check-label" for="flexSwitchCheckDefault">Public</label>
  </div>
  <%= button_to "Delete post", recipe_path(@recipe), method: :delete, class:'btn btn-sm btn-outline-danger' %>
</div>
